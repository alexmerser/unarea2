daemon off;

worker_processes  5;
error_log ${log_path}/nginx_error.log info;
pid ${pid_file}/nginx.pid;

events {
    worker_connections  1024;
}

http {
    default_type application/octet-stream;

    log_format main '$remote_addr||$remote_user||$time_local||$upstream_addr||$upstream_response_time||$upstream_status||$request||$status||$bytes_sent||$http_referer||$http_user_agent||$http_x_nimble_user||$http_x_nimble_user_id||$http_x_nimble_company||$http_x_nimble_company_id||$gzip_ratio';
    ignore_invalid_headers on;
    index index.html;
    client_header_timeout 240;
    client_body_timeout 240;
    send_timeout 240;
    proxy_buffer_size 128k;
    proxy_buffers 8 128k;
    proxy_cache_path ${log_path}cache/nginx levels=1:2 keys_zone=c_avatars_cache:8m max_size=3G inactive=365m;

    upstream unarea_core {
        server 0.0.0.0:7000 fail_timeout=0;
    }

    server {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_connect_timeout      240;
        proxy_send_timeout         240;
        proxy_read_timeout         240;

        location / {
            client_max_body_size 100m;
            proxy_pass http://unarea_core;
        }

        access_log ${log_path}/nginx_access.log main;
        error_log   ${log_path}/nginx_error.log;
    }
}
